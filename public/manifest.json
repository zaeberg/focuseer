{
  "manifest_version": 3,
  "name": "Focuseer",
  "description": "Maximize focus, swap distractions for productivity",
  "version": "1.0",
  "icons": {
    "16": "icons/favicon16.png",
    "32": "icons/favicon32.png",
    "48": "icons/favicon48.png",
    "128": "icons/favicon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs"
  ]
}
